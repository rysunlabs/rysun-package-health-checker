{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es2022"  // Updated to latest ES2022 for new JavaScript features
    ],
    "target": "ES2022",  // Latest ES version with full async/await support
    "module": "ESNext",  // Latest ES module system
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/esm",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true  
  },
  "include": [
    "./*.ts"    
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "../node_modules/@types/index.d.ts"
  ]
}
